<!DOCTYPE html>
<html>
  <head>
    <title>Library</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class='container'>
    <nav class="navbar navbar-expand-lg navbar-light bg-faded">
          <ul class="nav navbar-nav">
             <li class="nav-item active">
                <a class="nav-link" href="<%= posts_path %>"> Posts </a>
              </li>
             <li class="nav-item">
              <a class="nav-link" href="#"> Contacts</a>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <a class="nav-link" href="<%= destroy_user_session_path %>" method = "delete"> Exit</a>
              </li>
            <% else %>
                <li class="nav-item">
                  <a class="nav-link" href="<%= new_user_session_path %>"> Login</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%= new_user_registration_path %>"> Register</a>
                </li>
            <% end %>
          </ul>
         <%= link_to 'New post', new_post_path, class:'btn btn-outline-primary pull-xs-right' %> 
       
  </nav>
</div>
  <div class="container main">
      <div class="row">
       <div class="col-md-12">
        <% flash.each do |name, message| %>
          <div class="alert alert-<%=name%>">
            <%= message%>
            </div>
            <%end%>
      </div>
  </div>
       <%= yield %>
    </div>
  </body>
</html>
     
