<article class="post">
    <section class="post-head">
        <h2> <%= link_to post.title, post_path(post) %></h2>
         <small>
             <time> <%=post.created_at.to_date.strftime("%d %B %Y")%></time>
            <%=link_to 'Змінити', edit_post_path(post)%>
             <%=link_to 'Видалити', post_path(post), method: :delete, data: { confirm: 'Are you shure'}%>
        </small>
    </section>  
    <section class="post-summary clearfix">
      <%= image_tag post.image.url(:thumb), class: 'img-thumbail thumb' if post.image?%>
      <%=post.summary%>
    </section>
</article>

